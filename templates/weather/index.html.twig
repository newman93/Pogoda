{% extends 'base.html.twig' %}

{% block title %}Hello WeatherController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { 
        margin: 1em auto; 
        max-width: 800px; 
        width: 95%; 
        font: 18px/1.5 
        sans-serif;
    }

    .example-wrapper { 
        text-align: center;        
        background: #F5F5F5;
        padding: 50px;
        border-radius: 15px;
    }
</style>

<div class="example-wrapper">
    <h1>Prognoza pogody</h1>
    {{ form_start(form) }}
        {{ form_label(form.City, 'Miasto: ') }}
        {{ form_widget(form.City) }}
        {{ form_label(form.Country, 'Kraj: ') }}
        {{ form_widget(form.Country) }}
        {{ form_row(form.Submit, { 'label': 'Sprawd≈∫' }) }}
    {{ form_end(form) }}

    <h3>Prognoza</h3>
    {% if temperature == 'Brak danych' %}
        Temperatura: {{ temperature }}
    {% else %}
        Temperatura: {{ temperature }} &deg;C
    {% endif %}
</div>
{% endblock %}
